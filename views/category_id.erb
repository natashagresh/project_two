<%if session[:user_id]%>

<div class="articles_top">
  <ul>
    <li><a href="/">Homepage</a></li>
    <li><a href="/articles">Articles</a></li>
    <li><a href="/new_articles">Create Articles</a></li>
  </ul>
</div>  
    
<div class="category_id">
  <form action="/sessions" method="POST">
 <input type="hidden" name="_method" value="delete">
    <button>Log Out</button>
 </form>

<h1> <%= @category.category_name %> </h1>
<% @category.posts.each do |article| %>
	<h2><%= article.title_of_article %> </h2>
	<p><%= article.article %></p>
	<img src="<%=article.image_url %>">
	<p><%=article.created_at%></p>
	<%end %> 
</div>

<%else%>

<div class="redirect">
<div class="redirect_writing">
  <h1>Please <a href="/login">Login</a> or <a href="/sign_up">SignUp</a> for access.</h1> 


<%end%>