<%if session[:user_id]%>


<a href="/">Homepage</a>
<a href="/categories">Categories</a>
<a href="/new_articles">New Article</a>


<h2><%= @article["title_of_article"] %></h2>


<p><%= markdown(@article["article"]) %></p>
<img src="<%= @article["image_url"] %>">


<h5>by <%= @article.user.username %>  on <%= @article["created_at"] %><h5> 

<p><a href="/articles/<%= @article["id"] %>/edit">Edit Article</a></p>

<%else%>
<div class="redirect">
<div class="redirect_writing">
<h1>Please <a href="/login">Login</a> or <a href="/sign_up">SignUp</a> for access.</h1> 


<%end%>










